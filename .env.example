# Application Configuration
APP_NAME=ProjectMaster Enterprise
APP_VERSION=2.0.0
APP_ENV=development

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Database
DATABASE_TYPE=json  # Options: json, sqlite
DATABASE_PATH=./data/
SQLITE_DB_PATH=./data/projectmaster.db

# File Storage
UPLOAD_DIR=./uploads
IMAGE_DIR=./project_images
DOC_DIR=./project_docs
MAX_UPLOAD_SIZE_MB=10

# Session
SESSION_TIMEOUT_MINUTES=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Features
ENABLE_AI_ASSISTANT=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_BACKUP=true
BACKUP_INTERVAL_HOURS=24

# Email (Optional - if notifications enabled)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@projectmaster.com

# External APIs
GITHUB_TOKEN=your-github-token-optional

# Performance
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# Security Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_UPPERCASE=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
